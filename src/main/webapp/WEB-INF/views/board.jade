div(class="container")
    div(class="row span8")
        h2= board
        br
    div(class="row span8 offset3")
        button(class="btn btn-info btn-large" onclick="window.location='/boards/#{board.url}/codesnippet'") share a codesnippet 

    div(class="row span11 " id="codeSnippets")
        - for (codeSnippet <- board.codeSnippets.reverse)
            div
                b= codeSnippet.description
            div
                pre(class="brush: #{codeSnippet.language}")= "\n" + codeSnippet.code
            div
                button(class="btn btn-info btn-small" onclick="window.location='/boards/#{board.url}/codesnippet/#{codeSnippet.id}/delete'") delete
                span(class="pull-right")
                    i= codeSnippet.formattedTime


<script type="text/javascript">
| SyntaxHighlighter.all();
| var lastCodeSnippetId = '#{board.lastCodeSnippetId}';
| var board = '#{board.board}';
|</script>
